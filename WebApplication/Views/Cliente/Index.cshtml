@model IEnumerable<WebApplication.Models.ClienteViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Adicionar">Adicionar Novo Cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MesaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoraChegada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoraSaida)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MesaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoraChegada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoraSaida)
            </td>
            <td>
                @Html.ActionLink("Alterar", "Alterar", new {  id=item.Id }) |
                @Html.ActionLink("Detalhar", "Detalhar", new { id=item.Id }) |
                @Html.ActionLink("Deletar", "Deletar", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
